<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Samsung Battery Stats"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your battery information"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Disclaimer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1E1E1E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Battery data is extracted from system logs."
                    android:textSize="13sp"
                    android:textColor="#B0B0B0"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1E1E1E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ How to Use"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1ï¸âƒ£ Tap 'OPEN SYSDUMP' button below"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2ï¸âƒ£ In SysDump, select 'Run dumpstate/logcat', wait 2-3 minutes, then select 'OK'"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3ï¸âƒ£ Select 'Copy to sdcard(include CP Ramdump)'"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="12dp"/>

                <ImageView
                    android:id="@+id/ivSysDumpInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sysdump_instructions"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="SysDump Screen"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4ï¸âƒ£ Return here and tap 'READ BATTERY LOGS'"
                    android:textSize="14sp"
                    android:textColor="#E0E0E0"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenSysDump"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Open SysDump"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReadLogs"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Read Battery Logs"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_secondary"
            android:layout_marginBottom="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteLogs"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Delete Log Files"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_delete"
            android:layout_marginBottom="24dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="#BB86FC"/>

        <!-- Status Text -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to read battery stats"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="visible"/>

        <!-- Battery Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1E1E1E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Battery Statistics"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2C2C2C"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvFirstUseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Use: --"
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvBatteryHealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Battery Health: --"
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvChargeCycles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charge Cycles: --"
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:padding="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ This app only works on Samsung devices with SysDump access"
            android:textSize="12sp"
            android:textColor="#808080"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:padding="8dp"/>

    </LinearLayout>

</ScrollView>
